<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="15dp">

    <ImageView
        android:id="@+id/person"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/icon_person"
        android:onClick="clickperson" />

    <ImageView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="126dp"
        android:layout_marginBottom="30dp"
        android:layout_toEndOf="@+id/person"
        android:background="@drawable/icon_name" />


    <ImageView
        android:id="@+id/notifikasi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="300dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/icon_lonceng"
        android:onClick="clicknotifikasi" />

    <ImageView
        android:id="@+id/code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name"
        android:layout_marginBottom="40dp"
        android:background="@drawable/icon_code" />

    <ImageView
        android:id="@+id/vaksin"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/code"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/icon_vaksin"
        android:onClick="clickvaksin" />

    <ImageView
        android:id="@+id/hasil"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/code"
        android:layout_marginRight="30dp"
        android:layout_toRightOf="@+id/vaksin"
        android:background="@drawable/icon_hasil"
        android:onClick="clickhasil" />

    <ImageView
        android:id="@+id/ehac"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/code"
        android:layout_toRightOf="@+id/hasil"
        android:background="@drawable/icon_ehac" />
    <ImageView
        android:id="@+id/travel"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/vaksin"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/icon_travel" />
    <ImageView
        android:id="@+id/hatele"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/vaksin"
        android:layout_marginRight="30dp"
        android:layout_toRightOf="@+id/vaksin"
        android:background="@drawable/icon_tele" />
    <ImageView
        android:id="@+id/hospital"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/vaksin"
        android:layout_toRightOf="@+id/hasil"
        android:background="@drawable/icon_hospital" />


</RelativeLayout>